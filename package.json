{
  "name": "js-functions",
  "version": "1.0.0",
  "description": "just a place to store functions",
  "main": "index.js",
  "scripts": {
    "test:functional": "tape -r @babel/register functional-tests/**/*.js | tap-spec",
    "test:unit": "tape -r @babel/register src/**/*.test.js | tap-spec",
    "test:watch": "nodemon --watch src --watch functional-tests -x \"npm run test:unit & npm run test:functional\"",
    "prettify": "prettier --write src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puiutucutu/js-functions.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/puiutucutu/js-functions/issues"
  },
  "homepage": "https://github.com/puiutucutu/js-functions#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.10.1"
  }
}
